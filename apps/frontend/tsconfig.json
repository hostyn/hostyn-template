{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@services/*": ["services/*"],
      "@hooks/*": ["hooks/*"],
      "@middleware/*": ["middleware/*"],
      "@context/*": ["context/*"],
      "@views/*": ["views/*"],
      "@styles/*": ["styles/*"],
      "@components/*": ["components/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
